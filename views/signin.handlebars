  {{!-- START SIGNIN MODAL --}}
  <div class="row">
    <div class="col-lg-4">
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-warning" id="sign-in" data-toggle="modal" data-target="#exampleModal">
        Your Name Here
      </button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Please enter your name </h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form>
                <div class="col-md-4 mb-3">
                  <input type="text" class="form-control" id="userNameFirst" placeholder="First name" value="" required>
                </div>

                <p>Click any icon to select your preference after entering
                  your name.</p>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-warning" id="log-in">Submit</button>
            </div>
          </div>
        </div>
      </div>

