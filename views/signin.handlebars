  {{!-- START CREATE NEW PROJECT INPUT --}}
  <div id="new-project-input" class="input-group mb-2">
    <div id="createNewProject" class="input-group-prepend">
      <button id="createNewProjectButton" class="add-project-button btn btn-outline-secondary btn-sm" type="submit">
        <i class="fas fa-book"></i>
      </button>
    </div>
    <input id="projectName" type="text" class="add-project-name form-control form-control-sm" placeholder="enter a name for your new Project and click the book icon">
  </div>
